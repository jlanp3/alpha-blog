<div class="well well-sm col-sm-6 col-sm-offset-3">
<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-md-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-2 col-sm-offset-2">
				<%= f.label :username %>
			</div>
			<div class="col-sm-6">
				<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
			</div>
		</div>

		<div class="form-group">
			<div class="control-label col-sm-2 col-sm-offset-2">
				<%= f.label :email %>
			</div>
			<div class="col-sm-6">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-sm-2 col-sm-offset-2">
				<%= f.label :password %>
			</div>
			<div class="col-sm-6">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
			</div>
		</div>
		<!--<div class="form-group">
			<div class="control-label col-sm-2 col-sm-offset-2">
				<%= f.label :'Repeat Password'%>
			</div>
			<div class="col-sm-6">
				<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password again" %>
			</div>
		</div>-->
		<div class="form-group">
			<div class="col-sm-4 col-sm-offset-4">
				<%= f.submit(@user.new_record? ? "Sign up" : "Update", class: 'btn btn-primary') %>
				<%= link_to "Cancel", articles_path, class: "btn btn-danger" 
				%>
			</div>
		</div>
	</div>
	<% end %>
		
	</div>
</div>
</div>